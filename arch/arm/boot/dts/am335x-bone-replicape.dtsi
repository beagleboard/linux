               fault_ext_1 {
                   label               = "Replic:Fault-Ext-1";
                   debounce_interval   = <50>;
                   linux,code          = <93>;
                   gpios               = <&gpio2 1 0x5>;
                   gpio-key,wakeup;
               };
               fault_ext_2 {
                   label               = "Replic:Fault-Ext-2";
                   debounce_interval   = <50>;
