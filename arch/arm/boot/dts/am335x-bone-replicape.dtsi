                   gpio-key,wakeup;
               };
               fault_z {
                   label               = "Replic:Fault-Z";
                   debounce_interval   = <50>;
                   linux,code          = <92>;
                   gpios               = <&gpio0 15 0x5>;
                   gpio-key,wakeup;
