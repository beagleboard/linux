	};

	hat_40_gpio: hat-40-gpio-pins {
		pinctrl-single,pins = <
			J722S_IOPAD(0x019c, PIN_INPUT, 7) /* (B25) MCASP0_AXR1.GPIO1_9 */
		>;
	};
};

