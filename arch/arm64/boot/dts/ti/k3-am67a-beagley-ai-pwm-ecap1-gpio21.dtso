/dts-v1/;
/plugin/;

#include <dt-bindings/gpio/gpio.h>
#include "k3-pinctrl.h"

/*
 * Helper to show loaded overlays under: /proc/device-tree/chosen/overlays/
*/
&{/chosen} {
	overlays {
		k3-am67a-beagley-ai-pwm-ecap1-gpio21.kernel = __TIMESTAMP__;
		hat-40.pin = "k3-am67a-beagley-ai-pwm-ecap1-gpio21";
		hat-40.pin.beagle-pwm-bus = "bus@f0000";
		hat-40.pin.beagle-pwm-address = "23110000";
		hat-40.pin.beagle-pwm-export = "0";
		hat-40.pin.beagle-gpio-pi = "GPIO21";
	};
};

&main_pmx0 {
	hat_40_pwm_ecap: hat-40-pwm-ecap-pins {
		pinctrl-single,pins = <
			J722S_IOPAD(0x19C, PIN_OUTPUT, 2) /* (B25) MCASP0_AXR1.ECAP1_IN_APWM_OUT */
		>;
	};
};

&ecap1 {
	pinctrl-names = "default";
	pinctrl-0 = <&hat_40_pwm_ecap>;
	status = "okay";
};
